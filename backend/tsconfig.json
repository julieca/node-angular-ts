{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "lib": ["es2017"],
      "baseUrl": ".",
      "typeRoots": ["./node_modules/@types"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "allowJs": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": ["node_modules", "./public", "dist"]
}
